{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": ["es2020"],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "include": [
    "index.ts",
    "core.ts",
    "types.ts",
    "standalone-core.js"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "test-install.js",
    "demo-usage.js"
  ]
}